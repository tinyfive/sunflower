<div class="nested-fields">
  <%= f.input :relationship, collection: enum_options_for_select(SocialRelation, :relationship), include_blank: false %>
  <%= f.input :name %>
  <%= f.input :tel, as: :tel %>
  <%= f.input :employer %>
  <%= f.input :employer_tel, as: :tel %>
  <%= f.input :income_amount, wrapper: :horizontal_input_group do %>
    <span class="input-group-addon">&yen;</span>
    <%= f.input_field :income_amount, class: 'form-control' %>
  <% end %>
  <%= link_to_remove_association 'remove', f %>
</div>
